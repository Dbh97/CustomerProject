@using CustomerProject.Models.Domain
@model List<Customer>

@if (Model != null && Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email Address</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.FirstName</td>
                    <td>@customer.LastName</td>
                    <td>@customer.EmailAddress</td>
                    <td><a class="btn btn-link" asp-controller="customers" asp-action="edit" asp-route-id="@customer.Id">Edit</a></td>
                    <td><a class="btn btn-link" asp-controller="customers" asp-action="delete" asp-route-id="@customer.Id" onclick="return confirmDelete()">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
    
}

<br />
<a class="btn btn-primary" asp-controller="customers" asp-action="add">Add</a>

@section Scripts{
    <script>
        function confirmDelete(){
            return confirm("Are you sure you want to delete this category?");
        }
    </script>
}